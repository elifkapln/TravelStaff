@model List<TravelListDto>
@{
    ViewData["Title"] = "MyPassiveTravels";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Geçmiş Seyahatlerim</h4>

	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Geçmiş Seyahatler Tablosu</div>
				</div>
				<div class="card-body">
					@if (Model != null && Model.Any())
					{

						<table class="table table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Şehir</th>
									<th>Başlangıç Tarihi</th>
									<th>Bitiş Tarihi</th>
									<th>Oluşturulma Tarihi</th>
									<th>Açıklama</th>
									<th>Konaklama</th>
									<th>Araç</th>
									<th>Durum</th>
									<th>Aktif</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.TravelID</td>
										<td>@item.City</td>
										<td>@item.StartDate.ToString("dd.MMM.yyyy")</td>
										<td>@item.EndDate.ToString("dd.MMM.yyyy")</td>
										<td>@item.CreateDate.ToString("dd.MMM.yyyy")</td>
										<td>@item.Description</td>
										<td>@item.Stay</td>
										<td>@item.Vehicle</td>
										<td>@item.StatusInformation</td>
										<td>@item.Active</td>
									</tr>
								}
							</tbody>
						</table>
					}
					else
					{
						<div class="container mt-5">
							<h6 style="color:crimson">Geçmiş seyahatiniz bulunmamaktadır.</h6>
						</div>

					}
				</div>
			</div>
		</div>
	</div>
</div>