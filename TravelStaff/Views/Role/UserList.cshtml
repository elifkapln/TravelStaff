@model List<StaffListDto>
@{
	ViewData["Title"] = "UserList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Kullanıcı Rolleri</h4>
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Kullanıcı Tablosu</div>
				</div>
				<div class="card-body">
					@if (Model != null && Model.Any())
					{
						<table class="table table-hover">
							<thead>
								<tr>
									<th>#</th>
									<th>Ad</th>
									<th>Soyad</th>
									<th>Kullanıcı Adı</th>
									<th>Eposta</th>
									<th>Admin</th>
									<th>Rol Ata</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Name</td>
										<td>@item.Surname</td>
										<td>@item.UserName</td>
										<td>@item.Email</td>
										<td>@item.IsAdmin</td>
										<td><a href="/Role/AssignRole/@item.Id" class="btn btn-outline-info">Rol Ata</a></td>
									</tr>
								}
							</tbody>
						</table>
					}
					else
					{
						<div class="container mt-5">
							<h6 style="color:crimson">Kayıtlı herhangi bir kullanıcı bulunmamaktadır.</h6>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>