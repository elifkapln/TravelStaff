@model AddRoleDto
@{
	ViewData["Title"] = "AddRole";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Yeni Rol Oluşturma</h4>
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Rol Ekle</div>
				</div>
				<div class="card-body">
					<form method="post">
						<label>Rol Adı</label>
						<input type="text" asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>

						<div asp-validation-summary="ModelOnly"></div>
						<br />

						<button class="btn btn-outline-info">Oluştur</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>