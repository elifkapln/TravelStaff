@* AJAX *@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function () {
        // Sayfa yüklendiğinde AJAX çağrısı
        console.log('Document ready');
        $("#createtravel").click(function () {
            let travelvalues = {
                city: $("#txtcity").val(),
                startDate: $("#txtstartDate").val(),
                endDate: $("#txtendDate").val(),
                description: $("#txtdescription").val(),
                stay: $("#txtstay").val(),
                vehicle: $("#txtvehicle").val(),
                staffID: $("#txtstaffid").val(),
                adminID: $("#txtadminid").val(),
                statusID: $("#txtstatusid").val()
                // statusID: parseInt($("#txtstatusid").val())
            };

            $.ajax({
                method: "POST",
                url: "https://localhost:7143/api/Travel/Create",
                contentType: 'application/json',
                data: JSON.stringify(travelvalues),
                success: function (response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Travel Created!',
                        text: 'Your travel has been successfully created.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    // refresh (opsiyonel)
                },
                error: function (xhr, status, error) {
                    console.log('Hata:', error);
                }
            });
        });

    });
</script>