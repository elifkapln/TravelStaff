@model GetProfileDto

@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Profil Güncelleme</h4>
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Profil Bilgileri</div>
				</div>
				<div class="card-body">
					<form method="post">
@* 						<input type="hidden" asp-for="StaffID" />*@
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<label>Ad</label>
						<input type="text" asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
						<br />

						<label>Soyad</label>
						<input type="text" asp-for="Surname" class="form-control" />
						<span asp-validation-for="Surname" class="text-danger"></span>
						<br />

						<label>Şifre</label>
						<input type="password" asp-for="Password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
						<br />

						<label>Şifre Tekrar</label>
						<input type="password" asp-for="ConfirmPassword" class="form-control" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						<br />

						<label>Telefon No</label>
						<input type="text" asp-for="PhoneNumber" class="form-control" />
						@* <span asp-validation-for="PhoneNumber" class="text-danger"></span> *@
						<br />

						<label>Eposta</label>
						<input type="text" asp-for="Mail" class="form-control" />
						<span asp-validation-for="Mail" class="text-danger"></span>
						<br />
						<button class="btn btn-outline-primary">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
